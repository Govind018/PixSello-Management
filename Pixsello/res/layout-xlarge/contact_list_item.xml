<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/list_item_background"
    android:orientation="horizontal"
    android:paddingLeft="30dp" >

    <TextView
        android:id="@+id/item_service"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.50"
        android:text="@string/lbl_services"
        android:layout_marginLeft="100dp"
        android:textColor="@android:color/black"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/item_contact_person"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.50"
        android:layout_marginLeft="170dp"
        android:text="@string/lbl_contact_person"
        android:textColor="@android:color/black"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/item_contact_number"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.50"
        android:layout_marginLeft="170dp"
        android:text="@string/lbl_contact_number"
        android:textColor="@android:color/black"
        android:textSize="25sp" />

</LinearLayout>