<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/guest_background"
    tools:context="com.pixsello.management.guest.MakeInEntryActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/actionbar_background" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:onClick="goBack"
            android:src="@drawable/arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/lbl_make_in"
            android:textColor="@android:color/white"
            android:textSize="35sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATE"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/edit_date"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/edittext_background_selector"
            android:drawableEnd="@android:drawable/ic_menu_today"
            android:drawableRight="@android:drawable/ic_menu_today"
            android:editable="false"
            android:focusableInTouchMode="true"
            android:textColor="@android:color/white"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:textSize="23sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="TIME"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/edit_time"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/edittext_background_selector"
            android:editable="false"
            android:textColor="@android:color/white"
            android:focusableInTouchMode="true"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:textSize="23sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="0.25"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/lbl_guest_name"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="@string/lbl_company"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Room No"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="@string/lbl_visiting_guest_name"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="@string/lbl_Gendar"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="In Time"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="0.06"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/edit_guest_name"
                android:layout_width="470dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:background="@drawable/edittext_background_selector"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="25sp" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/edit_company"
                android:layout_width="470dp"
                android:layout_height="50dp"
                android:layout_marginTop="35dp"
                android:paddingLeft="10dp"
                android:background="@drawable/edittext_background_selector"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/edit_visiting_room"
                android:layout_width="470dp"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/edittext_background_selector"
                android:singleLine="true"
                android:paddingLeft="10dp"
                android:textColor="@android:color/white"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/edit_visiting_guest"
                android:layout_width="470dp"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/edittext_background_selector"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/chk_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textSize="30sp" />

                <CheckBox
                    android:id="@+id/chk_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="Female"
                    android:textSize="30sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/edit_in_time"
                android:layout_width="470dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/edittext_background_selector"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:paddingLeft="10dp"
                android:visibility="invisible" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/frame"
                android:layout_width="210dp"
                android:layout_height="210dp"
                android:layout_marginTop="30dp"
                android:contentDescription="@null"
                android:src="@drawable/frame"
                android:text="Photo" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="140dp"
                android:layout_height="190dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="40dp"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/profile"
                android:text="Photo" />

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/frame"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/submit_selector"
                android:onClick="capturePhoto"
                android:text="Take Photo" />
        </RelativeLayout>
    </LinearLayout>
                               
    <Button
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/submit_selector"
        android:onClick="doSubmit"
        android:text="Submit"
        android:textSize="25sp" />

</LinearLayout>