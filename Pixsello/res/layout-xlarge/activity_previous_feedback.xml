<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:background="@drawable/feedback_banner"
    tools:context="com.pixsello.management.training.StaffProfileActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/actionbar_background" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:onClick="goBack"
            android:src="@drawable/arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="FEEDBACKS"
            android:textColor="@android:color/white"
            android:textSize="30sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/list_header_back"
        android:paddingLeft="30dp" >

        <TextView
            android:id="@+id/text_guest_name"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="GUEST NAME"
            android:textColor="@android:color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/text_company"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="COMPANY"
            android:textColor="@android:color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/text_feedback"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="FEEDBACK"
            android:textColor="@android:color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/text_ambience"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="AMBIENCE"
            android:textColor="@android:color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/text_services"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="SERVICES"
            android:textColor="@android:color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/text_food"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="FOOD"
            android:textColor="@android:color/black"
            android:textSize="25sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/list_feedback"
        android:layout_width="match_parent"
        android:dividerHeight="1px"
        android:divider="@android:color/darker_gray"
        android:layout_height="match_parent" >
    </ListView>

</LinearLayout>