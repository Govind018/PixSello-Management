<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/payment_background"
    android:orientation="vertical"
    tools:context="com.spundhan.pixsello.payment.PaymentActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/actionbar_background" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:onClick="goBack"
            android:src="@drawable/arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="PAYMENT"
            android:textColor="@android:color/white"
            android:textSize="35sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:text="Name of Service"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="40dp"
                android:text="Identity"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="40dp"
                android:text="Bill No"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="40dp"
                android:text="Amount"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="40dp"
                android:text="Paid By"
                android:textColor="@android:color/black"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/edit_service_name"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:layout_marginRight="40dp"
                android:paddingLeft="10dp"
                android:editable="false"
                android:focusableInTouchMode="true"
                android:background="@drawable/edittext_background_selector"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/edit_identity"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="30dp"
                android:paddingLeft="10dp"
                android:editable="false"
                android:focusableInTouchMode="true"
                android:background="@drawable/edittext_background_selector"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/edit_bill_num"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="30dp"
                android:paddingLeft="10dp"
                android:editable="false"
                android:focusableInTouchMode="true"
                android:background="@drawable/edittext_background_selector"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/edit_amount"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="30dp"
                android:paddingLeft="10dp"
                android:editable="false"
                android:focusableInTouchMode="true"
                android:background="@drawable/edittext_background_selector"
                android:inputType="none"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <RadioButton
                android:id="@+id/radio_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginTop="40dp"
                android:text="Cash"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/radio_cheque"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="40dp"
                    android:text="Cheque Details"
                    android:textColor="@android:color/black"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/edit_cheque_number"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="35dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/edittext_background_selector"
                    android:textColor="@android:color/white"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/radio_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="40dp"
                    android:text="Other Details"
                    android:textColor="@android:color/black"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/edit_other_detail"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="35dp"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/edittext_background_selector"
                    android:textColor="@android:color/white"
                    android:textSize="30sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    
    <Button 
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:background="@drawable/submit_selector"
        android:layout_marginTop="20dp"
        android:onClick="doSubmit"
        android:layout_gravity="center"
        />

</LinearLayout>