<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <!-- Sent message layout -->

    <RelativeLayout
        android:id="@+id/message_receive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/message_sent_background"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/text_receiver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:text="~Govind Mastamardi"
            android:textColor="@android:color/darker_gray"
            android:textSize="13sp" />

        <RelativeLayout
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_receiver_name"
            android:layout_below="@+id/text_receiver_name" >

            <TextView
                android:id="@+id/sent_message_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="Hi How are you"
                android:textColor="#FFFFFF" />
        </RelativeLayout>
    </RelativeLayout>

    <!-- Receive message layout -->

    <RelativeLayout
        android:id="@+id/message_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/message_receive_background"
        android:visibility="visible" >

        <TextView
            android:id="@+id/text_sender_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:text="~Govind Mastamardi"
            android:textColor="@android:color/darker_gray"
            android:textSize="13sp" />

        <RelativeLayout
            android:id="@+id/message1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/text_sender_message" >

            <TextView
                android:id="@+id/text_sender_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="Hi How are you"
                android:textColor="#FFFFFF" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>